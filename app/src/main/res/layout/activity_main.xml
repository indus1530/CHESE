<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.chese.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/app_bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7fefefef"
            android:orientation="vertical">

            <!-- CUSTOM TOOLBAR -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/CustomToolbarTheme"
                app:popupTheme="@style/CustomPopupTheme"
                app:subtitleTextAppearance="@style/Toolbar.SubtitleText"
                app:title="@string/app_name"
                app:titleTextAppearance="@style/Toolbar.TitleText" />


            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:src="@drawable/app_icon" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/top_round_shape"
                    android:elevation="1dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="72dp"
                    android:paddingTop="48dp"
                    android:paddingEnd="72dp">


                    <TextView
                        android:id="@+id/username"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="4dp"
                        android:padding="4dp"
                        android:textAppearance="@style/MaterialAlertDialog.MaterialComponents.Title.Panel"
                        android:textColor="@color/colorPrimary" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="24dp"
                        android:padding="12dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/openVhcForm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="sectionPress"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:drawableStart="@drawable/new_form"
                                    android:drawablePadding="12dp"
                                    android:gravity="center_vertical"
                                    android:minWidth="460dp"
                                    android:text="OPEN NEW VHC FORM"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="36dp"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="Village Health Committee"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:background="@drawable/ic_arrow_forward"
                                android:gravity="center_horizontal|center_vertical"
                                android:textColor="@color/colorAccent"
                                android:textSize="24dp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="24dp"
                        android:padding="12dp"
                        app:cardCornerRadius="24dp">

                        <LinearLayout
                            android:id="@+id/openWsgForm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="sectionPress"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:drawableStart="@drawable/new_form"
                                    android:drawablePadding="12dp"
                                    android:gravity="center_vertical"
                                    android:minWidth="460dp"
                                    android:text="OPEN NEW WSG FORM"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="36dp"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="Women Support Group"
                                    android:textColor="@color/gray"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="12dp"
                                android:background="@drawable/ic_arrow_forward"
                                android:gravity="center_horizontal|center_vertical"
                                android:textColor="@color/colorAccent"
                                android:textSize="24dp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="24dp"
                        android:padding="12dp"
                        app:cardCornerRadius="24dp">

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/adminView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@color/grayLight"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccentLightOverlay"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="ADMIN OPTIONS"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/seca"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="A"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/vhc2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="VHC2"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/vhc3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="VHC3"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/vhc4"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="VHC4"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/wsg2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="WSG2"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/wsg3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="WSG3"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/wsg4"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="WSG4"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/wsg5"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:background="@color/white"
                                android:elevation="1dp"
                                android:gravity="center"
                                android:onClick="sectionPress"
                                android:padding="8dp"
                                android:shadowRadius="8"
                                android:text="WSG5"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/adminBlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <Button
                                android:id="@+id/openDBManager"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:onClick="sectionPress"
                                android:text="@string/open_db_manager" />


                            <!-- <Button
                                 android:id="@+id/copyData"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_margin="8dp"
                                 android:onClick="copyData"
                                 android:text="@string/copy_data_to_sdcard" />-->

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/capsule"
                    android:elevation="1dp"
                    android:fontFamily="@font/open_sans_condensed_light"
                    android:gravity="center_horizontal|center_vertical"
                    android:minHeight="56dp"
                    android:radius="10dp"
                    android:text="MAIN SCREEN"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</layout>