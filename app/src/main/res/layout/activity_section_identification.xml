<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <!--<variable
            name="form"
            type="edu.aku.hassannaqvi.sk.models.Form" />-->


        <variable
            name="callback"
            type="edu.aku.hassannaqvi.chese.ui.sections.SectionIdentificationActivity" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_bg_gray"
        android:orientation="vertical">


        <!-- CUSTOM TOOLBAR -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            app:titleTextAppearance="@style/ToolbarTheme" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">


            <androidx.cardview.widget.CardView
                style="@style/cardView"
                android:layout_margin="24dp">

                <LinearLayout
                    android:id="@+id/GrpName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <!-- distname  Input   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVdistname"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/distname" />

                                <Spinner
                                    android:id="@+id/distname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="56dp"
                                    android:prompt="@string/distname"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/facilityname" />

                                <Spinner
                                    android:id="@+id/facilityname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="56dp"
                                    android:prompt="@string/facilityname"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/Q_reportingdate" />

                                <!--<TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/reportingmonth" />-->

                                <Spinner
                                    android:id="@+id/reportMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="56dp"
                                    android:prompt="@string/reportingmonth"
                                    android:spinnerMode="dropdown" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                    <!--EndButton LinearLayout-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_End"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:background="@drawable/button_shape_red"
                            android:drawableTint="#ea0000"
                            android:onClick="BtnEnd"
                            android:text="Cancel"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_Continue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:background="@drawable/button_shape_green"
                            android:drawableTint="#00ea00"
                            android:onClick="BtnContinue"
                            android:text="Open"
                            android:textColor="@color/white" />

                    </LinearLayout>
                    <!--EndButton LinearLayout-->


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </ScrollView>


    </LinearLayout>

</layout>